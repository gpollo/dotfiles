ethernet enp4s0 {
    format_up = " wired: %ip "
    format_down = ""
}

order += "ethernet enp4s0"

ethernet wlp1s0 {
    format_up = " wifi: %ip "
    format_down = ""
}

order += "ethernet wlp1s0"

battery 0 {
    format      = " %status %percentage "
    format_down = ""

    last_full_capacity       = true
    integer_battery_capacity = true
    hide_seconds             = true

    threshold_type = percentage
    low_threshold = 30

    status_chr  = "charging"
    status_bat  = "discharging"
    status_unk  = "unknown"
    status_full = "full"
}

order += "battery 0"

memory {
    format = " %used/%total "
}

order += "memory"

cpu_usage {
    format = " CPUs %usage "
}

order += "cpu_usage"

tztime montreal {
    format = " %H:%M:%S - %d %b. %Y (%A) "
}

order += "tztime montreal"
